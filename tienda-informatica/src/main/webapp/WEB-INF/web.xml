<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>tienda_informatica</display-name>
  <welcome-file-list>    
    <welcome-file>index.jsp</welcome-file>    
  </welcome-file-list>
  <filter>
    <filter-name>UsuariosFilter</filter-name>
    <filter-class>org.iesbelen.filter.UsuariosFilter </filter-class>
    <init-param>
      <param-name>aceso-concedido-a-rol</param-name>
      <param-value>adminitrador</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>UsuariosFilter</filter-name>
    <url-pattern>/tienda/usuarios/*</url-pattern>
  </filter-mapping>
</web-app>